<link href='http://fonts.googleapis.com/css?family=Viga' rel='stylesheet' type='text/css'>
<style type = 'text/css'>

#connect_button
{
    display:block; 
    width:254px; 
    height: 45px; 
    color: white;
    background-image: url('app/assets/images/facebook.png');
    margin-left:auto;
    margin-right:auto;
    font-size:15px;

    margin-top:auto;
    margin-bottom:auto;
    line-height:3em;
}

.container
{
    font-family: Viga;
    color: white;   
}

.hero-unit
{
/* Old browsers */
    background: #006400; 
    /* FF3.6+ */
    background: -moz-linear-gradient(top,  #006400 0%, #84d69a 100%); 
    /* Chrome,Safari4+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#006400), color-stop(100%,#84d69a)); 
    /* Chrome10+,Safari5.1+ */
    background: -webkit-linear-gradient(top,  #006400 0%,#84d69a 100%); 
    /* Opera 11.10+ */
    background: -o-linear-gradient(top,  #006400 0%,#84d69a 100%);
    /* IE10+ */
    background: -ms-linear-gradient(top,  #006400 0%,#84d69a 100%); 
    /* W3C */
    background: linear-gradient(top,  #006400 0%,#84d69a 100%); 
    /* IE6-9 */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#006400', endColorstr='#84d69a',GradientType=0 ); 

    color: white;
}

.hero-unit h1
{
    color: white;
    text-shadow: 0.05em 0.05em #333;
}

.hero-unit h2
{
    color: white;
}
</style>

