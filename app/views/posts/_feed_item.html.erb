<% @event = feed_item %>
<% lender = @event.lender %>
<% borrower = @event.borrower %>

<div class="event">
  <%= image_tag lender.profile_picture, :class => "lender-pic" %>
  <span class="arrow">&#10132;</span>
  <%= image_tag borrower.profile_picture, :class => "borrower-pic" %>
  
  <p class="description"><%= @event.description %></p>
  
  <f class="timestamp"><%= time_ago_in_words(@event.created_at) %> ago</f>

  <ol class="comments">
    <% @event.comments.each do |comment| %>
    <li>
      <% commenter = User.find(comment.user_id) %>
      <%= image_tag commenter.profile_picture, :class => "comment-profile-pic" %>
      <h1><%= commenter.name %></h1>
      <p><%= comment.content %></p>
    </li>
    <% end %>
  </ol>
</div>
